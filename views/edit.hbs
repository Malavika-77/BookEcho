<h2>Edit Review</h2>
<form action="/reviews/{{review._id}}?_method=PUT" method="POST">
  <label for="title">Title:</label>
  <input type="text" id="title" name="title" value="{{review.title}}" required>
  <label for="author">Author:</label>
  <input type="text" id="author" name="author" value="{{review.author}}" required>
  <label for="content">Content:</label>
  <textarea id="content" name="content" required>{{review.content}}</textarea>
  <label for="rating">Rating:</label>
  <input type="number" id="rating" name="rating" value="{{review.rating}}" min="1" max="5" required>
  <button type="submit">Update</button>
</form>
<a href="/reviews/{{review._id}}">Back to Review</a>
<a href="/reviews">Back to Reviews</a>
