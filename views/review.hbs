<div class="container mt-5">
  <h1>Reviews</h1>
  <div class="list-group">
    {{#each reviews}}
      <div class="list-group-item mb-3">
        <h5 class="mb-1">{{this.title}}</h5>
        <p class="mb-1">{{this.content}}</p>
        {{#if this.imgUrl}}
          <img src="{{this.imgUrl}}" alt="Review Image" class="img-fluid mb-2" style="max-width: 300px;">
        {{/if}}
        <small>Rating: {{this.rating}}/5</small>
        <br>
        <small class="text-muted">Posted on: {{this.createdAt}}</small>
      </div>
    {{/each}}
  </div>
</div>
